<!DOCTYPE html>
<html>
<head>
  <title>Pictr</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>
  <script type="text/javascript">
    window.CLOUDINARY_OPTIONS = {
      cloud_name: "diy3hv57b",
      upload_preset: "gysu820j",
      theme: "minimal"
    };
  </script>
</head>
<% if signed_in? %>
  <% background = "" %>
<% else %>
  <% background = "https://images.unsplash.com/photo-1450150205175-1e2ee46bb78b?crop=entropy&fit=crop&fm=jpg&h=875&ixjsv=2.1.0&ixlib=rb-0.3.5&q=80&w=1250" %>
<% end %>

<body background=<%=background%>>

<%= render "layouts/errors" %>

<script>
  $(function() {
    $(".button").on("click", function(){
      $(".username").val("guest");
      $(".password").val("password");
      $(".auth-form").submit()
    });
  });
</script>

<%= yield %>

</body>
</html>
