<div class="container">
  <form class="form" action="<%= session_url %>" method="post">
    <h2>Sign In</h2>
    <%= auth_token_input %>

    <input type="text" name="user[username]" value="" id="user_username" placeholder="Username">

    <br/>
    <br/>

    <input type="password" name="user[password]" value="" placeholder="Password">

    <br/>
    <br/>
    <input type="submit" value="Log In">
    <br/>
    <br/>

    <div> Don't have an account? <%= link_to "Sign up", new_user_url%> </div>
  </form>
</div>
