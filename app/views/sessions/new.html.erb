<div class="auth-container">
  <form class="auth-form" action="<%= session_url %>" method="post">
    <h2>Sign In</h2>
    <%= auth_token_input %>

    <input type="text" name="user[username]" class="username" placeholder="Username">

    <br/>
    <br/>

    <input type="password" name="user[password]" class="password" placeholder="Password">

    <br/>
    <br/>
    <input type="submit" value="Log In">
    <button class="button" type="button" name="button">Guest</button>
    <br/>
    <br/>

    <div> Don't have an account? <%= link_to "Sign up", new_user_url%> </div>
  </form>
</div>
